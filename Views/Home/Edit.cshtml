@model Product
@{
    ViewData["Title"] = "Create";
}
<style>
    .input-validation-error{
        border: 1px solid red;
    }
</style>
<form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductId">
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Price"></label>
        <input class="form-control" asp-for="Price">
        <span asp-validation-for="Price"></span>
    </div>
    <div class="input-group mb-3">
        <input type="file" class="form-control" name="imageFile" id="imageFile">
    </div>
    <div>
        <img src="~/img/@Model.Image" alt="" style="max-width: 200px;">
        <input type="hidden" asp-for="@Model.Image">
    </div>    
    <div class="mb-3">
        <label class="form-label" asp-for="CategoryId"></label>
        <select class="form-select" asp-items="@ViewBag.Categories" asp-for="CategoryId">
            <option value="0">Hepsi</option>
        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>
    <div class="mb-3 form-check">
        <input class="form-check-input" asp-for="IsActive">
        <label class="form-check-label" asp-for="IsActive"></label>
        <span asp-validation-for="IsActive"></span>
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>